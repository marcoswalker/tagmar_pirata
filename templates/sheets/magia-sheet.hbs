<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar_rpg/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">Magia / Técnica</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
        </div>
    </header>
    <section class="sheet-primary" height="600">   
        <div class="container container_dados">
            <div class="row dados">
                <div class="col-md-2" style="text-align: left;">
                    <label><h4 class="mediaeval">Custo:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="system.custo" type="number" value="{{data.system.custo}}" height="30" style="margin-left: 1px;"/>
                </div>
                <div class="col-md-2">
                    <label><h4 class="mediaeval">Nível:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="system.nivel" type="number" value="{{data.system.nivel}}" height="30" style="margin-left: 1px;"/>
                </div>
                <div class="col-md-2">
                    <label><h4 class="mediaeval">Total:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="system.total.valor" type="number" value="{{data.system.total.valor}}" height="30" readonly/>
                </div>
            </div>
            <div class="row dados"> 
                <div class="col-md-4">
                    <label><h4 class="mediaeval">Karma ou Fadiga Adicional:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="system.total.valorKarma" type="number" value="{{data.system.total.valorKarma}}" height="30"/>
                </div> 
                <div class="col-md-2"></div>
                <div class="col-md-2"><h4 class="mediaeval">Favorito:</h4></div>
                <div class="col-md-2">
                    {{#if data.system.favorito}}
                        <input type="checkbox" checked name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                    {{else}}
                        <input type="checkbox" name="system.favorito" data-dtype="Boolean" value="{{data.system.favorito}}"/>
                    {{/if}}
                </div>
            </div>
            <div class="row dados">
                <div class="col-md-12" style="height: 320px;">
                    {{editor data.system.efeito target="system.efeito" button=true owner=options.owner editable=options.editable}}
                </div>
            </div>
        </div>
    </section>
</form>